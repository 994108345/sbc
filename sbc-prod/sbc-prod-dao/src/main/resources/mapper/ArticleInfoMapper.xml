  <insert id="insertArticleInfo">
    insert into sbc_article_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="articleInfoCode != null">
        article_info_code,
      </if>
      <if test="articleCode != null">
        article_code,
      </if>
      <if test="likeCount != null">
        like_count,
      </if>
